				{
					"name": "Get Document Requests - Property Owner",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Convert owner_id to a number and store it",
									"const ownerId = Number(pm.environment.get('owner_id'));",
									"if (isNaN(ownerId)) {",
									"    throw new Error('owner_id must be a valid number');",
									"}",
									"pm.environment.set('owner_id', ownerId);",
									"",
									"if (!pm.environment.get('auth_token')) {",
									"    throw new Error('auth_token environment variable is not set. Please run the login test first.');",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is an array of requests with correct structure\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"    if (jsonData.length > 0) {",
									"        const request = jsonData[0];",
									"        pm.expect(request).to.have.property('property_title').that.is.a('string');",
									"        pm.expect(request).to.have.property('contact_name').that.is.a('string');",
									"        pm.expect(request).to.have.property('contact_email').that.is.a('string');",
									"        pm.expect(request).to.have.property('request_date').that.is.a('string');",
									"        pm.expect(request).to.have.property('status').that.is.a('string');",
									"        pm.expect(request).to.have.property('reason').that.is.a('string');",
									"        pm.expect(request).to.have.property('response_date');",
									"        pm.expect(request).to.have.property('response_note');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}

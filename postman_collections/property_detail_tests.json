									"pm.test(\"Response is an array of requests with correct structure\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"    if (jsonData.length > 0) {",
									"        const request = jsonData[0];",
									"        pm.expect(request).to.have.property('property_title').that.is.a('string');",
									"        pm.expect(request).to.have.property('contact_name').that.is.a('string');",
									"        pm.expect(request).to.have.property('request_date').that.is.a('string');",
									"        pm.expect(request).to.have.property('status').that.is.a('string');",
									"        pm.expect(request).to.have.property('reason').that.is.a('string');",
									"        pm.expect(request).to.have.property('response_date');",
									"        pm.expect(request).to.have.property('response_note');",
									"        ",
									"        // Log only non-sensitive information",
									"        console.log('Request status:', request.status);",
									"        console.log('Request date:', request.request_date);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
